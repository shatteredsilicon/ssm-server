[mysqld]
  max_connections = 512

# Default MySQL Settings
  innodb_buffer_pool_size=128M
# innodb_log_file_size=5M          # Use 50M when using 5.6 or newer as that's the new default
  innodb_flush_log_at_trx_commit=2
  innodb_file_per_table=1          # not default until 5.6, we should have this enabled
  innodb_buffer_pool_dump_at_shutdown = OFF
  innodb_buffer_pool_load_at_startup = OFF
  innodb_compression_algorithm = lz4
  innodb_flush_neighbors = 0
  secure_file_priv = /var/lib/mysql-files

# Disable Query Cache by default
  query_cache_size=0
  query_cache_type=0

# By default use unix socket only
  skip_name_resolve = 1
  skip_networking   = 1
